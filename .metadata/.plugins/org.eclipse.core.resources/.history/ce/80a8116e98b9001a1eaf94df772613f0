package com.traderbook.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.servlet.ModelAndView;

import com.traderbook.domains.BancaSelecionada;
import com.traderbook.repositories.RepositorioBanca;
import com.traderbook.repositories.RepositorioBancaSelecionada;

@Controller
public class BancaSelecionadaController {
	
	@Autowired
	private RepositorioBanca repositorioBanca;
	@Autowired
	private RepositorioBancaSelecionada repositorioBancaSelecionada;
	
	@RequestMapping(value = "/selecionar-banca/{id}", method = RequestMethod.POST)
	public ModelAndView selecionarBanca(BancaSelecionada bancaSelecionadaAlterada, Long id) {
		if(result.hasErrors()) {
			ModelAndView result = new ModelAndView("index");
			model.addAttribute("bancas", repositorioBanca.findAll());
			return "index";
		}
		repositorioBancaSelecionada.deleteAll();
		repositorioBancaSelecionada.save(bancaSelecionadaAlterada);
		return "index";
	}

}
