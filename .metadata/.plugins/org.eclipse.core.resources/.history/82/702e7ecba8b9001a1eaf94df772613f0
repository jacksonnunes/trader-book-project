package com.traderbook.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.servlet.ModelAndView;

import com.traderbook.domains.Banca;
import com.traderbook.domains.BancaSelecionada;
import com.traderbook.repositories.RepositorioBanca;
import com.traderbook.repositories.RepositorioBancaSelecionada;

@Controller
public class BancaSelecionadaController {
	
	@Autowired
	private RepositorioBancaSelecionada repositorioBancaSelecionada;
	@Autowired
	private RepositorioBanca repositorioBanca;
	
	@GetMapping("/selecionar-banca")
	public ModelAndView selecionarBanca() {
		ModelAndView result = new ModelAndView("banca/selecionar");
		BancaSelecionada bancaSelecionada = new BancaSelecionada();
		bancaSelecionada.setBanca(new Banca());
		result.addObject("bancaSelecionada", bancaSelecionada);
		result.addObject("bancas", repositorioBanca.findAll());
		return result;
	}
	
	@PostMapping("/selecionar-banca")
	public String selecionarBanca(BancaSelecionada bancaSelecionada) {
		repositorioBancaSelecionada.deleteAll();
		repositorioBancaSelecionada.save(bancaSelecionada);
		return "redirect:/";
	}

}
